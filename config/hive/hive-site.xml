<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<configuration>
    <!-- Metastore Connection -->
    <property>
        <name>hive.metastore.uris</name>
        <value>thrift://hms:9083</value>
    </property>

    <!-- Notifications Config -->
    <property>
        <name>hive.notification.event.poll.interval</name>
        <value>0</value>
    </property>
    <property>
        <name>hive.notification.event.consumers</name>
        <value></value>
    </property>

    <!-- Server Configuration -->
    <property>
        <name>hive.server2.thrift.port</name>
        <value>10000</value>
    </property>
    <property>
        <name>hive.server2.thrift.bind.host</name>
        <value>0.0.0.0</value>
    </property>
    <property>
        <name>hive.server2.transport.mode</name>
        <value>binary</value>
    </property>

    <!-- Connection Settings -->
    <property>
        <name>hive.server2.enable.doAs</name>
        <value>false</value>
    </property>
    <property>
        <name>hive.server2.authentication</name>
        <value>NONE</value>
    </property>
    <property>
        <name>hive.server2.use.SSL</name>
        <value>false</value>
    </property>

    <!-- Warehouse and Storage Settings -->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>/user/hive/warehouse</value>
    </property>
    <property>
        <name>hive.exec.scratchdir</name>
        <value>/tmp/hive/scratch</value>
    </property>

    <!-- Execution Engine Settings -->
    <property>
        <name>hive.execution.engine</name>
        <value>mr</value>
    </property>
    <property>
        <name>mapreduce.framework.name</name>
        <value>local</value>
    </property>
    <property>
        <name>mapreduce.map.memory.mb</name>
        <value>4096</value>
    </property>
    <property>
        <name>mapreduce.reduce.memory.mb</name>
        <value>4096</value>
    </property>

    <!-- Local Mode Settings -->
    <property>
        <name>hive.exec.mode.local.auto</name>
        <value>true</value>
    </property>
    <property>
        <name>hive.exec.mode.local.auto.input.files.max</name>
        <value>4</value>
    </property>
    <property>
        <name>hive.exec.mode.local.auto.inputbytes.max</name>
        <value>134217728</value>
    </property>
    <property>
        <name>hive.exec.mode.local.auto.tasks.max</name>
        <value>4</value>
    </property>

    <!-- Performance Optimizations -->
    <property>
        <name>hive.optimize.local.groupby</name>
        <value>true</value>
    </property>
    <property>
        <name>hive.exec.parallel</name>
        <value>true</value>
    </property>
    <property>
        <name>hive.exec.parallel.thread.number</name>
        <value>8</value>
    </property>
    <property>
        <name>hive.optimize.reducededuplication</name>
        <value>true</value>
    </property>

    <!-- Stats Settings -->
    <property>
        <name>hive.stats.autogather</name>
        <value>false</value>
    </property>
    <property>
        <name>hive.compute.query.using.stats</name>
        <value>false</value>
    </property>
    <property>
        <name>hive.stats.fetch.column.stats</name>
        <value>false</value>
    </property>
    <property>
        <name>hive.cbo.enable</name>
        <value>false</value>
    </property>

    <!-- Logging Configuration -->
    <property>
        <name>hive.log.dir</name>
        <value>/opt/apache-hive-3.1.3-bin/logs</value>
    </property>
    <property>
        <name>hive.log.file</name>
        <value>hive.log</value>
    </property>
    <property>
        <name>hive.log.level</name>
        <value>INFO</value>
    </property>
    <property>
        <name>hive.root.logger</name>
        <value>INFO,DRFA</value>
    </property>
    <property>
        <name>hive.log.maxfilesize</name>
        <value>256MB</value>
    </property>
    <property>
        <name>hive.log.maxbackupindex</name>
        <value>10</value>
    </property>

    <!-- Console Logging -->
    <property>
        <name>hive.server2.logging.operation.level</name>
        <value>INFO</value>
    </property>
    <property>
        <name>hive.server2.logging.operation.verbose</name>
        <value>true</value>
    </property>
</configuration>